@model AddRoleViewModel

@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Role/Index">Roller</a></li>
            <li class="breadcrumb-item active"><a href="/Role/AddRole">Rol Ekleme Sayfası</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Rol Ekleme Sayfası</h4>
                    <p class="text-muted m-b-15 f-s-12">Lütfen rol bilgisini <code>eksiksiz</code> ve <code>doğru</code> bir şekilde doldurunuz.</p>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Rol Adı</label>
                                <input type="text" asp-for="RoleName" class="form-control input-rounded col-sm-10" placeholder="Rol bilgisini giriniz.">
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <hr />
                            <button class="btn mb-1 btn-rounded btn-outline-info col-12">Yeni Rol Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

