@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/AdminStaff/Index">Personeller</a></li>
            <li class="breadcrumb-item active"><a href="/AdminStaff/AddStaff">Personel Güncelleme Sayfası</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Personel Güncelleme Sayfası</h4>
                    <p class="text-muted m-b-15 f-s-12">Lütfen personel bilgilerini <code>eksiksiz</code> ve <code>doğru</code> bir şekilde doldurunuz.</p>
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="StaffID" />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">İsim Soyisim</label>
                                <input type="text" asp-for="Name" class="form-control input-rounded col-sm-10" placeholder="İsim ve soyisim bilgilerini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Ünvan</label>
                                <input type="text" asp-for="Title" class="form-control input-rounded col-sm-10" placeholder="Ünvan bilgisini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Sosyal Medya</label>
                                <input type="text" asp-for="SocialMedia1" class="form-control input-rounded col-sm-10" placeholder="Sosyal medya linkini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Sosyal Medya</label>
                                <input type="text" asp-for="SocialMedia2" class="form-control input-rounded col-sm-10" placeholder="Sosyal medya linkini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Sosyal Medya</label>
                                <input type="text" asp-for="SocialMedia3" class="form-control input-rounded col-sm-10" placeholder="Sosyal medya linkini giriniz.">
                            </div>
                            <hr />
                            <button class="btn mb-1 btn-rounded btn-outline-info col-12">Personel Bilgilerini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

